# MGAPI Environment Variables Example
# Copy this file to .env and update the values

# API Configuration
MGAPI_URL=http://localhost:8000

# Server Configuration
MGAPI_SERVER_HOST=0.0.0.0
MGAPI_SERVER_PORT=8000
MGAPI_SERVER_RELOAD=false
MGAPI_SERVER_WORKERS=1

# Logging Configuration
MGAPI_LOG_LEVEL=INFO
MGAPI_LOG_FILE=logs/mgapi.log

# Environment (development, production)
ENV_FOR_DYNACONF=default